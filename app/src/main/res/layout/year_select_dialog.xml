<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/year_select_dialog">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:overScrollMode="always"
        android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/year_one"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@color/colorBackground"
            android:gravity="center"
            android:textColor="@color/colorUnselected"
            android:text="2010"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/year_two"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@color/colorBackground"
            android:gravity="center"
            android:textColor="@color/colorUnselected"
            android:text="2011"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/year_three"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@color/colorBackground"
            android:gravity="center"
            android:textColor="@color/colorUnselected"
            android:text="2012"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/year_four"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@color/colorBackground"
            android:gravity="center"
            android:textColor="@color/colorUnselected"
            android:text="2013"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/year_five"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@color/colorBackground"
            android:gravity="center"
            android:textColor="@color/colorUnselected"
            android:text="2014"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/year_six"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@color/colorBackground"
            android:gravity="center"
            android:textColor="@color/colorUnselected"
            android:text="2015"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/year_seven"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@color/colorBackground"
            android:gravity="center"
            android:textColor="@color/colorUnselected"
            android:text="2016"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/year_eight"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@color/colorBackground"
            android:gravity="center"
            android:textColor="@color/colorUnselected"
            android:text="2017"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/year_nine"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@color/colorBackground"
            android:gravity="center"
            android:textColor="@color/colorUnselected"
            android:text="2018"
            android:textSize="20sp"
            android:textStyle="bold"/>



    </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>
